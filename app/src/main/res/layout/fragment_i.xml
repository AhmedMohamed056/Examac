<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentshowexam"
    tools:context=".FragmentI">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/stu_show_exam_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:title="@string/Exam"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewstudentshowexam"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        />
    <ProgressBar
        android:id="@+id/progressbarstudentshowexam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/btnsavestudentanswers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_answers"
        android:textSize="20sp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_splashde"
        app:backgroundTint="@color/purple_500"
        />

</FrameLayout>