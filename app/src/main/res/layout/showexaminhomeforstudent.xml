<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="4dp"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:layout_marginTop="10dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_splashde"
        android:layout_marginHorizontal="10dp">
        <TextView
            android:id="@+id/studentexamid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="142578214154sdfrg"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingTop="5dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/studentexamdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020/04/03"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/studentexamid"
            android:layout_marginStart="40dp"
            />
        <TextView
            android:id="@+id/studentendexamdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020/04/03"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/studentexamdate"
            android:paddingTop="10dp"
            android:layout_marginStart="40dp"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/studentendexamdate"
            app:layout_constraintTop_toBottomOf="@+id/studentexamdate"
            android:layout_marginHorizontal="10dp"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/examstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:50"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/examend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:50"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/deletestudentoldexam"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/baseline_delete_24"
            android:padding="20dp"
            android:layout_marginEnd="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>