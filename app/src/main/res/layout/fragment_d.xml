<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/studenthomefragment"
    android:layout_height="match_parent"
    tools:context=".FragmentD">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/loginde"/>
    <ImageView
        android:id="@+id/studentsettings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/ic_baseline_manage_accounts_24"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="115dp">
        <TextView
            android:id="@+id/studentnameid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="Ahmed Mohamed Mahmoud Rayyan" />

        <TextView
            android:id="@+id/studentemailid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:text="StudentHome056@gmail.com" />

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/student_profile_image"
        android:layout_width="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="130dp"
        android:layout_height="100dp"
        android:src="@drawable/user_profile"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/old_exam_back_de"
        android:layout_marginTop="280dp"
        android:text="@string/old_exams"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/archivo_black"
        android:gravity="center"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewstudenthome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="330dp"
        />
    <ProgressBar
        android:id="@+id/progressbarstudenthome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"/>




</FrameLayout>